<!-- $Id$ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
       SERIAL=""
      VERSION="0.101"
       STATUS="ALPHA"
         ICON="tPerlFlex.png"
COMPATIBILITY="ALL"
       AUTHOR="Talend"
 RELEASE_DATE="20050320A"
    STARTABLE="true"
    SCHEMA_AUTO_PROPAGATE="false"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="BEFORE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="AFTER" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="CODE_START" FIELD="MEMO_PERL" REQUIRED="false" NUM_ROW="1" NB_LINES="9">
      <DEFAULT># start part of your Perl code</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CODE_MAIN" FIELD="MEMO_PERL" REQUIRED="false" NUM_ROW="2" NB_LINES="9">
      <DEFAULT># here is the main part of the component, a piece of code executed
#  in the row loop</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CODE_END" FIELD="MEMO_PERL" REQUIRED="false" NUM_ROW="3" NB_LINES="9">
      <DEFAULT># end of the component, outside/closing the loop</DEFAULT>
    </PARAMETER>
   </PARAMETERS>

   <CODEGENERATION>
     <TEMPLATES>
       <TEMPLATE NAME="tPerlFlex" MULTIPLE_METHODS="true"/>
     </TEMPLATES>
   </CODEGENERATION>

   <RETURNS/>

</COMPONENT>
