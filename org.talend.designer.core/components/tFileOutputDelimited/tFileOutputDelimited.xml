<!-- $Id$ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    ICON="tFileOutputDelimited32.ico"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    SCHEMA_AUTO_PROPAGATE="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="BEFORE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="AFTER" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true" NUM_ROW="1" REPOSITORY_VALUE="DELIMITED" />

    <PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="2" REQUIRED="true" REPOSITORY_VALUE="FILE_PATH">
      <DEFAULT>'C:\talend_files\out.csv'</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="ROWSEPARATOR" FIELD="TEXT" NUM_ROW="3" REPOSITORY_VALUE="ROW_SEPARATOR">
      <DEFAULT>"\n"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="FIELDSEPARATOR" FIELD="TEXT" NUM_ROW="3" REPOSITORY_VALUE="FIELD_SEPARATOR">
      <DEFAULT>';'</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="APPEND" FIELD="CHECK" REQUIRED="true" NUM_ROW="3" REPOSITORY_VALUE="APPEND">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="INCLUDEHEADER" FIELD="TEXT" NUM_ROW="4">
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="5">
      <DEFAULT/> 
    </PARAMETER>

    <PARAMETER NAME="ENCODING" FIELD="TEXT" NUM_ROW="6" REQUIRED="true" REPOSITORY_VALUE="ENCODING">
      <DEFAULT>'ISO-8859-15'</DEFAULT>
    </PARAMETER>
   </PARAMETERS>

   <CODEGENERATION>
     <TEMPLATES>
       <TEMPLATE NAME="java" MULTIPLE_METHODS="true"/>
       <TEMPLATE NAME="perl" MULTIPLE_METHODS="true"/>
     </TEMPLATES>
     <IMPORTS>
       <IMPORT NAME="TEXT_CSV" MODULE="Text::CSV_XS" REQUIRED="false" />
     </IMPORTS>
   </CODEGENERATION>

   <RETURNS>
     <RETURN NAME="NB_LINE" TYPE="INTEGER" AVAILABILITY="AFTER"/>
   </RETURNS>
</COMPONENT>
