<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    ICON="tSortRow.png"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    SCHEMA_AUTO_PROPAGATE="true"
  >
    <SIGNATURE />
  </HEADER>

  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
    <CONNECTOR CTYPE="BEFORE" MAX_INPUT="1" />
    <CONNECTOR CTYPE="AFTER" MAX_INPUT="1" />
    <CONNECTOR CTYPE="REFERENCE" />
    <CONNECTOR CTYPE="RUN_OK" />
    <CONNECTOR CTYPE="RUN_ERROR" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="CRITERIA"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="3"
      NB_LINES="3"
    >
      <ITEMS CODE_LANGUAGE="perl">
        <ITEM NAME="COLNAME" />
        <ITEM NAME="SORT" />
        <ITEM NAME="ORDER" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="4"
    >
      <DEFAULT/> 
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="Array" OUTPUT="SortIn">

      <TEMPLATE NAME="Array" COMPONENT="tArray">
        <LINK_TO NAME="SortIn" CTYPE="BEFORE" />
      </TEMPLATE>

      <TEMPLATE NAME="SortIn" COMPONENT="tSortIn"/>

      <TEMPLATE_PARAM SOURCE="self.CRITERIA"    TARGET="SortIn.CRITERIA" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA"      TARGET="SortIn.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA"      TARGET="Array.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="Array.DESTINATION" />
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="SortIn.ORIGIN" />

<!--       <TEMPLATE_PARAM SOURCE="Array.UNIQUE_NAME" TARGET="SortIn.ORIGIN" /> -->
    </TEMPLATES>
  </CODEGENERATION>

  <RETURNS />
</COMPONENT>