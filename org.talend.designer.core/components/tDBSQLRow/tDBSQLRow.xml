<!-- $Id$ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    ICON="tDBSQLRow.png"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    SCHEMA_AUTO_PROPAGATE="false"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="BEFORE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="AFTER" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true" NUM_ROW="1" REPOSITORY_VALUE="DATABASE" />

    <PARAMETER NAME="TYPE" FIELD="CLOSED_LIST" NUM_ROW="2" REPOSITORY_VALUE="TYPE">
      <ITEMS CODE_LANGUAGE="perl" DEFAULT="mysql;mysql">
        <ITEM NAME="MYSQL"      VALUE="mysql;mysql" REPOSITORY_ITEM="MYSQL"/>
        <ITEM NAME="PGSQL"      VALUE="postgresql;Pg" REPOSITORY_ITEM="PGSQL"/>
        <ITEM NAME="ORACLE"     VALUE="oracle;oracle" REPOSITORY_ITEM="ORACLE"/>
        <ITEM NAME="ODBC"       VALUE="undef;odbc" REPOSITORY_ITEM="ODBC"/>
        <ITEM NAME="MSSQL_ODBC" VALUE="mssql;odbc" REPOSITORY_ITEM="ODBC_JDBC"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER NAME="HOST" FIELD="TEXT" NUM_ROW="3" REPOSITORY_VALUE="SERVER_NAME" NOT_SHOW_IF="(TYPE=='MSSQL_ODBC' or TYPE=='ODBC')">
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="PORT" FIELD="TEXT" NUM_ROW="3" REPOSITORY_VALUE="PORT" NOT_SHOW_IF="(TYPE=='MSSQL_ODBC' or TYPE=='ODBC')">
      <DEFAULT>''</DEFAULT>
      <DEFAULT IF="TYPE=='MYSQL'">'3306'</DEFAULT>
      <DEFAULT IF="TYPE=='PGSQL'">'5432'</DEFAULT>
<!--         <DEFAULT IF="TYPE=='PGSQL'">'1521'</DEFAULT> -->
    </PARAMETER>

    <PARAMETER NAME="DBNAME" FIELD="TEXT" NUM_ROW="3" REPOSITORY_VALUE="SID">
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="USER" FIELD="TEXT" NUM_ROW="4" REPOSITORY_VALUE="USERNAME">
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="PASS" FIELD="TEXT" NUM_ROW="4" REPOSITORY_VALUE="PASSWORD">
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" NUM_ROW="5">
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="QUERY" FIELD="MEMO" NUM_ROW="6">
      <DEFAULT>'select id, name from employee'</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="ENCODING" FIELD="TEXT" NUM_ROW="7" REQUIRED="true">
      <DEFAULT>'ISO-8859-15'</DEFAULT>
    </PARAMETER>
  </PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES>
      <TEMPLATE MULTIPLE_METHODS="true"/>
    </TEMPLATES>
     <IMPORTS>
       <IMPORT NAME="DBI" MODULE="DBI" REQUIRED="true" />
       <IMPORT NAME="DBD-Oracle" MODULE="DBD::Oracle" REQUIRED="false" />
       <IMPORT NAME="DBD-Pg" MODULE="DBD::Pg" REQUIRED="false" />
       <IMPORT NAME="DBD-mysql" MODULE="DBD::mysql" REQUIRED="false" />
       <IMPORT NAME="DBD-ODBC" MODULE="DBD::ODBC" REQUIRED="false" />
     </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="QUERY" TYPE="STRING" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>