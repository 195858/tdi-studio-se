<!-- $Id$ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    ICON="tFileList32.ico"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    SCHEMA_AUTO_PROPAGATE="false"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="BEFORE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="AFTER" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="DIRECTORY" FIELD="DIRECTORY" NUM_ROW="1">
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER NAME="FILEMASK" FIELD="TEXT" NUM_ROW="2">
      <DEFAULT>'*.txt'</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CASE_SENSITIVE" FIELD="CLOSED_LIST" NUM_ROW="3">
      <ITEMS CODE_LANGUAGE="perl" DEFAULT="YES">
        <ITEM NAME="YES" VALUE="YES"/>
         <ITEM NAME="NO" VALUE="NO"/>
      </ITEMS>
    </PARAMETER>
  </PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES>
      <TEMPLATE NAME="java" MULTIPLE_METHODS="false"/>
      <TEMPLATE NAME="perl" MULTIPLE_METHODS="true"/>
    </TEMPLATES>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="CURRENT_FILE" TYPE="STRING" AVAILABILITY="FLOW"/>
    <RETURN NAME="CURRENT_FILEPATH" TYPE="STRING" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
