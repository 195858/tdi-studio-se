<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    ICON32="tMysqlOutputBulk.png"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="BEFORE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="AFTER" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="2"
      REPOSITORY_VALUE="DATABASE"
    />

    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="SERVER_NAME"
    >
      <DEFAULT>'localhost'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="PORT"
    >
      <DEFAULT>'3306'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DBNAME"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="SID"
    >
      <DEFAULT>''</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="USERNAME"
    >
      <DEFAULT>''</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="PASSWORD"
    >
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE"
      FIELD="TEXT"
      NUM_ROW="6"
    >
      <DEFAULT>'employee'</DEFAULT>
    </PARAMETER>

<!-- following property should not be displayed -->

    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="14"
      REQUIRED="true"
    >
      <DEFAULT>'C:\temp\mysql_data.txt'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ROWSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="15"
      REPOSITORY_VALUE="ROW_SEPARATOR"
    >
      <DEFAULT>"\n"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELDSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="16"
      REPOSITORY_VALUE="FIELD_SEPARATOR"
    >
      <DEFAULT>';'</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="tFOD" OUTPUT="tMOBE">

      <TEMPLATE NAME="tFOD" COMPONENT="tFileOutputDelimited">
        <LINK_TO NAME="tMOBE" CTYPE="BEFORE"/>
      </TEMPLATE>
      
      <TEMPLATE NAME="tMOBE" COMPONENT="tMysqlOutputBulkExec"/>
      
      <TEMPLATE_PARAM SOURCE="self.HOST"   TARGET="tMOBE.HOST" />
      <TEMPLATE_PARAM SOURCE="self.DBNAME" TARGET="tMOBE.DBNAME" />
      <TEMPLATE_PARAM SOURCE="self.PORT"   TARGET="tMOBE.PORT"   />
      <TEMPLATE_PARAM SOURCE="self.USER"   TARGET="tMOBE.USER" />
      <TEMPLATE_PARAM SOURCE="self.PASS"   TARGET="tMOBE.PASS" />
      <TEMPLATE_PARAM SOURCE="self.TABLE"  TARGET="tMOBE.TABLE" />

      <TEMPLATE_PARAM SOURCE="self.FILENAME" TARGET="tFOD.FILENAME" />
      <TEMPLATE_PARAM SOURCE="self.FILENAME" TARGET="tMOBE.FILENAME" />

      <TEMPLATE_PARAM SOURCE="self.ROWSEPARATOR" TARGET="tFOD.ROWSEPARATOR" />
      <TEMPLATE_PARAM SOURCE="self.ROWSEPARATOR" TARGET="tFOD.ROWSEPARATOR" />

      <TEMPLATE_PARAM SOURCE="self.FIELDSEPARATOR"  TARGET="tFOD.FIELDSEPARATOR" />
      <TEMPLATE_PARAM SOURCE="self.FIELDSEPARATOR"  TARGET="tMOBE.FIELDS_TERMINATED_BY" />

    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS/>
</COMPONENT>
