   <DOCUMENTATION>
      <URL/>
   </DOCUMENTATION>
   <CODE LANGUAGE="Perl" LOCALISATION="INTERNAL" URI=".">
      <VALUE/>
      <CALL><![CDATA[
my ($e_current_row) = (@_);
my $mResult = &tLog(
  Message  => __MESSAGE__,
  Priority => __PRIORITY__,
  Form     => __FORM__,
  Crlf     => __CRLF__,
  EachLine => __MOD__);
    
UpdateStat('__NAME__', 1);
]]></CALL>
   </CODE>
