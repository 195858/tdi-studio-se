   <CODE LANGUAGE="Perl" LOCALISATION="INTERNAL" URI=".">
      <VALUE/>
      <CALL><![CDATA[
my ($e_row_def) = (@_);
my %row_def = %$e_row_def;
my %row = %{$row_def{Values}};
  
  my @whilecodes = (__WHILECODE__); # Row Action List
    
  __PERL__
  
  for my $whilecode (@whilecodes) {
    &amp;$whilecode($e_row_def);
  }
]]></CALL>
   </CODE>
