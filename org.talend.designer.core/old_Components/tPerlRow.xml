   <HEADER NAME="tPerlRow" ID="" DISPLAY_NAME="Perl Code" PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA" ICON="tPerlRow32.ico" COMPATIBILITY="ALL" AUTHOR="talend" RELEASE_DATE="20050320A" FAMILY="Processing">
