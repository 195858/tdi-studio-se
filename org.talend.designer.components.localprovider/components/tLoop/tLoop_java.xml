<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="LOOPTYPE"
      FIELD="CLOSED_LIST"
      NUM_ROW="1"
    >
      <ITEMS DEFAULT="FORLOOP">  
      	<ITEM NAME="FORLOOP"        VALUE="FORLOOP" />
        <ITEM NAME="WHILELOOP"        VALUE="WHILELOOP" />      
      </ITEMS>
   </PARAMETER>
  
    <PARAMETER NAME="FROM" FIELD="TEXT" NUM_ROW="10" SHOW_IF="(LOOPTYPE=='FORLOOP')">
      <DEFAULT>1</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="TO" FIELD="TEXT" NUM_ROW="20" SHOW_IF="(LOOPTYPE=='FORLOOP')">
      <DEFAULT>10</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="STEP" FIELD="TEXT" NUM_ROW="30" SHOW_IF="(LOOPTYPE=='FORLOOP')">
      <DEFAULT>1</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="DECLARATION" FIELD="TEXT" NUM_ROW="10" SHOW_IF="(LOOPTYPE=='WHILELOOP')">
      <DEFAULT>"int i=0"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="CONDITION" FIELD="TEXT" NUM_ROW="20" SHOW_IF="(LOOPTYPE=='WHILELOOP')">
      <DEFAULT>"i&lt;10"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="ITERATION" FIELD="TEXT" NUM_ROW="30" SHOW_IF="(LOOPTYPE=='WHILELOOP')">
      <DEFAULT>"i++"</DEFAULT>
    </PARAMETER>
    
    
  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="CURRENT_ITERATION" TYPE="INT" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
