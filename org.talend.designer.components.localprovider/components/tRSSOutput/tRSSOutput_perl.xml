<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
  >
    <SIGNATURE />
  </HEADER>

  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="10"
      READONLY="true"
    >
      <TABLE>
        <COLUMN NAME="title" TYPE="string"/>
        <COLUMN NAME="description" TYPE="string"/>
        <COLUMN NAME="pubDate" TYPE="datetime"/>
        <COLUMN NAME="link" TYPE="string"/>
      </TABLE>
    </PARAMETER>

    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="20"
      REQUIRED="true"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/rss.xml"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="APPEND"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="30"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER 
      NAME="TITLE" 
      FIELD="TEXT" 
      REQUIRED="true"
      NUM_ROW="40"
      GROUP="CHANNEL"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER 
      NAME="LANGUAGE" 
      FIELD="TEXT" 
      REQUIRED="true"
      NUM_ROW="41"
      GROUP="CHANNEL"
    >
      <DEFAULT>"en"</DEFAULT>
    </PARAMETER>

    <PARAMETER 
      NAME="DESCRIPTION" 
      FIELD="TEXT" 
      REQUIRED="true"
      NUM_ROW="50"
      GROUP="CHANNEL"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER 
      NAME="PUBDATE" 
      FIELD="TEXT" 
      REQUIRED="true"
      NUM_ROW="60"
      GROUP="CHANNEL"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER 
      NAME="LINK" 
      FIELD="TEXT" 
      REQUIRED="true"
      NUM_ROW="70"
      GROUP="CHANNEL"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
  </PARAMETERS>

  <ADVANCED_PARAMETERS>

    <PARAMETER
      NAME="ENCODING"
      FIELD="ENCODING_TYPE"
      NUM_ROW="10"
      REQUIRED="true"
    >
      <DEFAULT>"UTF-8"</DEFAULT>
    </PARAMETER>

  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="XML-RSS" MODULE="XML::RSS" REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS/>

</COMPONENT>