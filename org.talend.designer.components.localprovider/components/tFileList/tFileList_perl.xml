<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="DIRECTORY"
      FIELD="DIRECTORY"
      NUM_ROW="10"
      REQUIRED="true"
    >
      <DEFAULT>'__COMP_DEFAULT_FILE_DIR__/directory'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FILEMASK"
      FIELD="TEXT"
      NUM_ROW="20"
    >
      <DEFAULT>'*.txt'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CASE_SENSITIVE"
      FIELD="CHECK"
      NUM_ROW="30"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="INCLUDE_SUBDIR"
      FIELD="CHECK"
      NUM_ROW="40"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="MATCH_FILES"
      FIELD="CHECK"
      NUM_ROW="50"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="MATCH_DIRS"
      FIELD="CHECK"
      NUM_ROW="60"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="CURRENT_FILE" TYPE="STRING" AVAILABILITY="FLOW"/>
    <RETURN NAME="CURRENT_FILEPATH" TYPE="STRING" AVAILABILITY="FLOW"/>
    <RETURN NAME="NB_FILE" TYPE="STRING" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>