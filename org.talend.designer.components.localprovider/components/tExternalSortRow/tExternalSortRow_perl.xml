<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    VISIBLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="10"
    >
      <DEFAULT/> 
    </PARAMETER>

    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="20"
      REQUIRED="true"
    >
      <DEFAULT>'__COMP_DEFAULT_FILE_DIR__/sorted.txt'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELDSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="30"
    >
      <DEFAULT>';'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CRITERIA"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="40"
      NB_LINES="3"
    >
      <ITEMS>
        <ITEM NAME="COLNAME" FIELD="COLUMN_LIST"/>

        <ITEM NAME="SORT" FIELD="CLOSED_LIST">
          <ITEMS DEFAULT="NUM">
            <ITEM NAME="NUM" VALUE="num"/>
            <ITEM NAME="ALPHA" VALUE="alpha"/>
          </ITEMS>
        </ITEM>

        <ITEM NAME="ORDER" FIELD="CLOSED_LIST">
          <ITEMS DEFAULT="ASC">
            <ITEM NAME="ASC" VALUE="asc"/>
            <ITEM NAME="DESC" VALUE="desc"/>
          </ITEMS>
        </ITEM>
      </ITEMS>
    </PARAMETER>

  </PARAMETERS>

  <ADVANCED_PARAMETERS>

    <PARAMETER
      NAME="MAX_MEMORY"
      FIELD="TEXT"
      NUM_ROW="10"
    >
      <DEFAULT>'200M'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TEMP_DIR"
      FIELD="DIRECTORY"
      NUM_ROW="20"
    >
      <DEFAULT></DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ADD_EOF_LABEL"
      FIELD="LABEL"
      REQUIRED="true"
      NUM_ROW="29"
      COLOR="0;0;0"
    >
      <DEFAULT>Add a dummy EOF line useful before tAggregateSortedRow</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ADD_EOF"
      FIELD="CHECK"
      NUM_ROW="30"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="ESO" OUTPUT="FID">

      <TEMPLATE NAME="ESO" COMPONENT="tExternalSortOutput">
        <LINK_TO NAME="FID" CTYPE="ROWS_END"/>
      </TEMPLATE>
      
      <TEMPLATE NAME="FID" COMPONENT="tFileInputDelimited"/>

      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="ESO.SCHEMA"/>
      <TEMPLATE_PARAM
        SOURCE="self.FIELDSEPARATOR"
        TARGET="ESO.FIELDSEPARATOR"
      />
      <TEMPLATE_PARAM SOURCE="self.FILENAME" TARGET="ESO.FILENAME"/>
      <TEMPLATE_PARAM SOURCE="self.CRITERIA" TARGET="ESO.CRITERIA"/>
      <TEMPLATE_PARAM SOURCE="self.MAX_MEMORY" TARGET="ESO.MAX_MEMORY"/>
      <TEMPLATE_PARAM SOURCE="self.TEMP_DIR" TARGET="ESO.TEMP_DIR"/>
      <TEMPLATE_PARAM SOURCE="self.ADD_EOF" TARGET="ESO.ADD_EOF"/>

      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="FID.SCHEMA"/>
      <TEMPLATE_PARAM
        SOURCE="self.FIELDSEPARATOR"
        TARGET="FID.FIELDSEPARATOR"
      />
      <TEMPLATE_PARAM SOURCE="self.FILENAME" TARGET="FID.FILENAME"/>
    </TEMPLATES>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="INTEGER" AVAILABILITY="AFTER"/>
   </RETURNS>
</COMPONENT>