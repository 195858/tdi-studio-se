<COMPONENT>
   <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="1"
    STATUS="BETA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070830"
    STARTABLE="true"
   >
   <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SOURCE"
      FIELD="DIRECTORY"
      REQUIRED="true"
      NUM_ROW="10"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/to_archive"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="INCLUDE_SUBDIR"
      FIELD="CHECK"
      NUM_ROW="20"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="TARGET"
      FIELD="FILE"
      REQUIRED="true"
      NUM_ROW="30"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/archive.zip"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="LEVEL"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="40"
    >
      <ITEMS DEFAULT="4">
        <ITEM NAME="BEST" VALUE="9" />
        <ITEM NAME="NORMAL" VALUE="4" />
        <ITEM NAME="FAST" VALUE="0" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="ALL_FILES"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="50"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
     
    <PARAMETER
      NAME="MASK"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="60"
      SHOW_IF="ALL_FILES == 'false'"
    >
      <ITEMS>
     	<ITEM NAME="FILEMASK" />
        <ITEM NAME="CASE_SENSITIVE" FIELD="CHECK" VALUE="false"/>
      </ITEMS>
    </PARAMETER>    
  </PARAMETERS>

   <CODEGENERATION>
     <IMPORTS>
       <IMPORT NAME="Archive-Zip" MODULE="Archive::Zip" REQUIRED="true" />
     </IMPORTS>
   </CODEGENERATION> 
  
  <RETURNS/>
  
</COMPONENT>