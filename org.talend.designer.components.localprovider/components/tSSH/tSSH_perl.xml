<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="10"
    >
      <DEFAULT>'ssh_server'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="20"
    >
      <DEFAULT>22</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="30"
    >
      <DEFAULT>$ENV{USERNAME}</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="AUTH_METHOD"
      FIELD="CLOSED_LIST"
      NUM_ROW="40"
    >
      <ITEMS DEFAULT="PASSWORD">
        <ITEM NAME="PUBLICKEY"  VALUE="PUBLICKEY"/>
        <ITEM NAME="PASSWORD"   VALUE="PASSWORD"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="PASSWORD"
      FIELD="TEXT"
      NUM_ROW="50"
      SHOW_IF="AUTH_METHOD == 'PASSWORD'"
    >
      <DEFAULT>'secret'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PRIVATEKEY"
      FIELD="FILE"
      NUM_ROW="70"
      SHOW_IF="AUTH_METHOD == 'PUBLICKEY'"
    >
      <DEFAULT>$ENV{HOME}.'/.ssh/id_dsa'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="COMMAND"
      FIELD="MEMO"
      NUM_ROW="90"
    >
      <DEFAULT>'uname -a
echo Talend Open Studio'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USE_TIMEOUT"
      FIELD="CHECK"
      NUM_ROW="100"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TIMEOUT"
      FIELD="TEXT"
      NUM_ROW="100"
      SHOW_IF="USE_TIMEOUT == 'true'"
    >
      <DEFAULT>60</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

   <CODEGENERATION>
     <IMPORTS>
       <IMPORT NAME="Net-SSH-Perl" MODULE="Net::SSH::Perl" REQUIRED="true" />
       <IMPORT NAME="Net-SSH-W32Perl" MODULE="Net::SSH::W32Perl" REQUIRED="false" />
     </IMPORTS>
   </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="STDOUT" TYPE="STRING" AVAILABILITY="FLOW"/>
    <RETURN NAME="STDERR" TYPE="STRING" AVAILABILITY="FLOW"/>
    <RETURN NAME="EXIT_CODE" TYPE="INT" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>