<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="10"
    >
      <DEFAULT>"ssh_server"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="20"
    >
      <DEFAULT>22</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="30"
    >
      <DEFAULT>"USERNAME"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="AUTH_METHOD"
      FIELD="CLOSED_LIST"
      NUM_ROW="40"
    >
      <ITEMS DEFAULT="PASSWORD">
        <ITEM NAME="PUBLICKEY"  VALUE="PUBLICKEY"/>
        <ITEM NAME="PASSWORD"   VALUE="PASSWORD"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="PASSWORD"
      FIELD="TEXT"
      NUM_ROW="50"
      SHOW_IF="AUTH_METHOD == 'PASSWORD'"
    >
      <DEFAULT>"secret"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PRIVATEKEY"
      FIELD="FILE"
      NUM_ROW="70"
      SHOW_IF="AUTH_METHOD == 'PUBLICKEY'"
    >
      <DEFAULT>"/.ssh/id_dsa"</DEFAULT>
    </PARAMETER>

	<PARAMETER
      NAME="PASSPHRASE"
      FIELD="TEXT"
      NUM_ROW="50"
      SHOW_IF="AUTH_METHOD == 'PUBLICKEY'"
    >
      <DEFAULT>"secret"</DEFAULT>
    </PARAMETER>

	<PARAMETER
      NAME="COMMANDSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="90"
    >
      <DEFAULT>";"</DEFAULT>
    </PARAMETER>

	<PARAMETER NAME="COMMANDS" FIELD="TABLE" NUM_ROW="110" NB_LINES="5" >
      <ITEMS>
        <ITEM NAME="COMMAND" VALUE="echo Talend Open Studio"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="USE_TIMEOUT"
      FIELD="CHECK"
      NUM_ROW="120"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TIMEOUT"
      FIELD="TEXT"
      NUM_ROW="130"
      SHOW_IF="USE_TIMEOUT == 'true'"
    >
      <DEFAULT>60</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

    <CODEGENERATION>
    <IMPORTS>
      <IMPORT
        NAME="Java_SHH2"
        MODULE="ganymed-ssh2-build211beta4.jar"
        REQUIRED="true"
      />
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="STDOUT" TYPE="STRING" AVAILABILITY="FLOW"/>
    <RETURN NAME="STDERR" TYPE="STRING" AVAILABILITY="FLOW"/>
    <RETURN NAME="EXIT_CODE" TYPE="INT" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>