<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Internet</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="10"
    >
      <TABLE READONLY="true">
        <COLUMN
          NAME="title"
          TYPE="string"
          LENGTH="255"
          READONLY="false"
          CUSTOM="true"
        />

      	<COLUMN
          NAME="description"
          TYPE="string"
          LENGTH="255"
          READONLY="false"
          CUSTOM="true"
        />

       	<COLUMN
          NAME="pubDate"
          TYPE="string"
          LENGTH="255"
          READONLY="false"
          CUSTOM="true"
        />

      	<COLUMN
          NAME="link"
          TYPE="string"
          LENGTH="255"
          READONLY="false"
          CUSTOM="true"
        />
      </TABLE>
    </PARAMETER>

    <PARAMETER
      NAME="RSS"
      FIELD="TEXT"
      NUM_ROW="20"
      REQUIRED="true"
    >
      <DEFAULT>"http://feeds.feedburner.com/Talend"</DEFAULT>
    </PARAMETER>
        
    <PARAMETER
      NAME="ARTICLE_AMOUNT"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="30"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="AMOUNT"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="30"
      SHOW_IF="ARTICLE_AMOUNT == 'true'"
    >
      <DEFAULT>10</DEFAULT>
    </PARAMETER>

  </PARAMETERS>
  
  <CODEGENERATION>
    <IMPORTS>
       <IMPORT
         NAME="XML-RSS-Parser"
         MODULE="XML::RSS::Parser"
         REQUIRED="true"
       />
    </IMPORTS>
  </CODEGENERATION>
  
  <RETURNS/>
</COMPONENT>