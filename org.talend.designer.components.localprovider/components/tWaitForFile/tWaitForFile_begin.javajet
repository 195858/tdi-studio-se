			java.util.List<java.io.File> getCreatedFiles(java.util.List<java.io.File> originalFiles, java.util.List<java.io.File> fetchOneTimeFiles) {
				java.util.List<java.io.File> newCreatedFiles = new java.util.ArrayList<java.io.File>();
