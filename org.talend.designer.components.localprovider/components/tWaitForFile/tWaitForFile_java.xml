<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="WAIT" FIELD="TEXT" NUM_ROW="1">
      <DEFAULT>1</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="MAX_ITERATIONS" FIELD="TEXT" NUM_ROW="2">
      <DEFAULT></DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DIRECTORY"
      FIELD="DIRECTORY"
      NUM_ROW="3"
      REQUIRED="true"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/directory"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="FILEMASK" FIELD="TEXT" NUM_ROW="4">
      <DEFAULT>"*.txt"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="INCLUDE_SUBDIR"
      FIELD="CHECK"
      NUM_ROW="5"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CASE_SENSITIVE"
      FIELD="CHECK"
      NUM_ROW="5"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

 	<PARAMETER
      NAME="INCLUDE_PRESENT"
      FIELD="CHECK"
      NUM_ROW="6"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ACTION_ON"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="7"
    >
      <ITEMS DEFAULT="filecreated">
        <ITEM NAME="FILE_NEW" VALUE="filecreated" />
        <ITEM NAME="FILE_DELETED" VALUE="filedeleted" />
        <ITEM NAME="FILE_UPDATED" VALUE="fileupdated" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="THEN"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="8"
    >
      <ITEMS DEFAULT="continue">
        <ITEM NAME="CONTINUE" VALUE="continue" />
        <ITEM NAME="EXIT_LOOP" VALUE="exitloop" />
      </ITEMS>
    </PARAMETER>

 	<PARAMETER
      NAME="CHECK_SUM"
      FIELD="CHECK"
      NUM_ROW="9" 
      SHOW="false"
    >
      <DEFAULT IF="ACTION_ON == 'FILE_UPDATED'">true</DEFAULT>
      <DEFAULT IF="(ACTION_ON == 'FILE_NEW') or (ACTION_ON == 'FILE_DELETED')">false</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="CURRENT_ITERATION" TYPE="id_Integer" AVAILABILITY="FLOW"/>
    <RETURN NAME="PRESENT_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="DELETED_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="CREATED_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="UPDATED_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>