<!-- $Id: tFTP_perl.xml 1528 2007-01-19 17:03:36 +0000 (星期五, 19 一月 2007) smallet $ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
       SERIAL=""
      VERSION="0.101"
       STATUS="ALPHA"
         
COMPATIBILITY="ALL"
       AUTHOR="Talend"
 RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="THEN_RUN" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="HOST" FIELD="TEXT" REQUIRED="true" NUM_ROW="1">
      <DEFAULT>"localhost"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="PORT" FIELD="TEXT" REQUIRED="true" NUM_ROW="1">
      <DEFAULT>21</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="USERNAME" FIELD="TEXT" REQUIRED="true" NUM_ROW="2">
      <DEFAULT>"anonymous"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="PASSWORD" FIELD="TEXT" REQUIRED="true" NUM_ROW="2">
      <DEFAULT>"suomynona"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="LOCALDIR" FIELD="DIRECTORY" REQUIRED="false" NUM_ROW="3">
      <DEFAULT>"."</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="REMOTEDIR" FIELD="TEXT" REQUIRED="false" NUM_ROW="4">
      <DEFAULT>"."</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="ACTION" FIELD="CLOSED_LIST" NUM_ROW="5">
      <ITEMS DEFAULT="put">
        <ITEM NAME="PUT"    VALUE="put" />
        <ITEM NAME="GET"    VALUE="get" />
        <ITEM NAME="RENAME" VALUE="rename" />
        <ITEM NAME="DELETE" VALUE="delete" />
      </ITEMS>
    </PARAMETER>   
     
    <PARAMETER NAME="MODE" FIELD="CLOSED_LIST" NUM_ROW="5" SHOW_IF="(ACTION == 'PUT' or ACTION == 'GET')">
      <ITEMS DEFAULT="ascii">
     	<ITEM NAME="ASCII"  VALUE="ascii" />
        <ITEM NAME="BINARY"  VALUE="binary" />        
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER 
    	NAME="REPLACE_FILE" 
    	FIELD="CHECK" 
    	NUM_ROW="5" 
    	REQUIRED="true"
    	SHOW_IF="(ACTION == 'GET')">
        <DEFAULT>true</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="FILES" FIELD="TABLE" REQUIRED="false" NUM_ROW="6" NB_LINES="5">
      <ITEMS>
        <ITEM NAME="FILEMASK" />
        <ITEM NAME="NEWNAME" SHOW_IF="ACTION=='RENAME'"/>
      </ITEMS>
    </PARAMETER>
  </PARAMETERS>
  <CODEGENERATION>
     <IMPORTS>
       <IMPORT NAME="Java-FTP" MODULE="edtftpj-1.5.4.jar" REQUIRED="true" />
     </IMPORTS>
   </CODEGENERATION>

  <RETURNS/>

</COMPONENT>