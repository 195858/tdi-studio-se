<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE />
  </HEADER>

  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
    <CONNECTOR CTYPE="THEN_RUN" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE" />
    <CONNECTOR CTYPE="RUN_OK" />
    <CONNECTOR CTYPE="RUN_ERROR" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>

  <PARAMETERS>
   	<PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true" NUM_ROW="1"/>
    
	<PARAMETER NAME="HOST" FIELD="TEXT" NUM_ROW="2" REQUIRED="true">
      <DEFAULT>"ldap.openldap.org"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="PORT" FIELD="TEXT" NUM_ROW="3" REQUIRED="true">
      <DEFAULT>389</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="PROTOCOL" FIELD="CLOSED_LIST" NUM_ROW="4" REQUIRED="true">
    	<ITEMS DEFAULT="LDAP">
    		<ITEM NAME="LDAP" VALUE="LDAP" />
    		<ITEM NAME="LDAPS" VALUE="LDAPS" />
    	</ITEMS>
    </PARAMETER>
    
    <PARAMETER NAME="ADVANCEDCA" FIELD="CHECK" NUM_ROW="5" SHOW_IF="PROTOCOL=='LDAPS'">
    	<DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="STORECA" FIELD="FILE" NUM_ROW="6" SHOW_IF="(ADVANCEDCA=='true' and PROTOCOL=='LDAPS')" >
      <DEFAULT>"c:/mycacerts"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="LIMIT" FIELD="TEXT" NUM_ROW="7">
    	<DEFAULT>100</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="AUTHENTIFICATION" FIELD="CHECK" NUM_ROW="8">
    	<DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="USER" FIELD="TEXT" NUM_ROW="9" SHOW_IF="AUTHENTIFICATION == 'true'">
    	<DEFAULT>"cn=Directory Manager"</DEFAULT>
 	</PARAMETER>
 	
 	<PARAMETER NAME="PASSWD" FIELD="TEXT" NUM_ROW="10" SHOW_IF="AUTHENTIFICATION == 'true'">
    	<DEFAULT>"password"</DEFAULT>
 	</PARAMETER>
 	
 	<PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="11"
    >
      <TABLE>
        <COLUMN NAME="dc" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="ou" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="objectClass" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="mail" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="uid" TYPE="id_String" LENGTH="255"/>
      </TABLE>
      <!--SHOW_IF="PROPERTY_TYPE=='BUILT_IN'"-->
    </PARAMETER>
 	
  </PARAMETERS>

  <CODEGENERATION>
	<IMPORTS>
      <IMPORT
        NAME="ldap"
        MODULE="talendssl.jar"
        REQUIRED="true"
      />
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
  </RETURNS>

</COMPONENT>