<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="9"
    >
      <DEFAULT/> 
    </PARAMETER>

    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="10"
      REPOSITORY_VALUE="DATABASE:MYSQL"
    />

    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="20"
      REPOSITORY_VALUE="SERVER_NAME"
    >
      <DEFAULT>'localhost'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="30"
      REPOSITORY_VALUE="PORT"
    >
      <DEFAULT>'3306'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DBNAME"
      FIELD="TEXT"
      NUM_ROW="40"
      REPOSITORY_VALUE="SID"
    >
      <DEFAULT>''</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="50"
      REPOSITORY_VALUE="USERNAME"
    >
      <DEFAULT>''</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="TEXT"
      NUM_ROW="60"
      REPOSITORY_VALUE="PASSWORD"
    >
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE"
      FIELD="TEXT"
      NUM_ROW="70"
    >
      <DEFAULT>'employee'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE_ACTION"
      FIELD="CLOSED_LIST"
      NUM_ROW="80"
    >
      <ITEMS DEFAULT="NONE">
        <ITEM
          NAME="NONE"
          VALUE="NONE"
        />
        <ITEM
          NAME="DROP_CREATE"
          VALUE="DROP_CREATE"
        />
        <ITEM
          NAME="CREATE"
          VALUE="CREATE"
        />
        <ITEM
          NAME="CREATE_IF_NOT_EXISTS"
          VALUE="CREATE_IF_NOT_EXISTS"
        />
        <ITEM
          NAME="CLEAR"
          VALUE="CLEAR"
        />
        <ITEM
          NAME="TRUNCATE"
          VALUE="TRUNCATE"
        />
      </ITEMS>
    </PARAMETER>

<!-- following property should not be displayed -->

    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="100"
      REQUIRED="true"
    >
      <DEFAULT>'C:\temp\mysql_data.txt'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ROWSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="110"
      REPOSITORY_VALUE="ROW_SEPARATOR"
    >
      <DEFAULT>"\n"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELDSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="120"
      REPOSITORY_VALUE="FIELD_SEPARATOR"
    >
      <DEFAULT>';'</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="tMOB" OUTPUT="tMBE">

      <TEMPLATE NAME="tMOB" COMPONENT="tMysqlOutputBulk">
        <LINK_TO NAME="tMBE" CTYPE="ROWS_END"/>
      </TEMPLATE>
      
      <TEMPLATE NAME="tMBE" COMPONENT="tMysqlBulkExec"/>
      
      <TEMPLATE_PARAM SOURCE="self.HOST"   TARGET="tMBE.HOST" />
      <TEMPLATE_PARAM SOURCE="self.DBNAME" TARGET="tMBE.DBNAME" />
      <TEMPLATE_PARAM SOURCE="self.PORT"   TARGET="tMBE.PORT"   />
      <TEMPLATE_PARAM SOURCE="self.USER"   TARGET="tMBE.USER" />
      <TEMPLATE_PARAM SOURCE="self.PASS"   TARGET="tMBE.PASS" />
      <TEMPLATE_PARAM SOURCE="self.TABLE"  TARGET="tMBE.TABLE" />

      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="tMOB.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="tMBE.SCHEMA" />

      <TEMPLATE_PARAM SOURCE="self.FILENAME" TARGET="tMOB.FILENAME" />
      <TEMPLATE_PARAM SOURCE="self.FILENAME" TARGET="tMBE.FILENAME" />

      <TEMPLATE_PARAM SOURCE="self.ROWSEPARATOR" TARGET="tMOB.ROWSEPARATOR" />
      <TEMPLATE_PARAM SOURCE="self.ROWSEPARATOR" TARGET="tMOB.ROWSEPARATOR" />

      <TEMPLATE_PARAM SOURCE="self.FIELDSEPARATOR"  TARGET="tMOB.FIELDSEPARATOR" />
      <TEMPLATE_PARAM SOURCE="self.FIELDSEPARATOR"  TARGET="tMBE.FIELDS_TERMINATED_BY" />

      <TEMPLATE_PARAM SOURCE="self.TABLE_ACTION" TARGET="tMBE.TABLE_ACTION" />

    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS/>
</COMPONENT>
