<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="THEN_RUN" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="10"
      REQUIRED="true"
    >
      <DEFAULT>'__COMP_DEFAULT_FILE_DIR__/out.xml'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ROOT_TAGS"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="20"
      NB_LINES="2"
    >
      <ITEMS>
        <ITEM NAME="TAG" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="ROW_TAG"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="21"
    >
      <DEFAULT>'row'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SPLIT"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="40"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SPLIT_EVERY"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="40"
      SHOW_IF="SPLIT == 'true'"
    >
      <DEFAULT>1000</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="MAPPING"
      FIELD="TABLE"
      NUM_ROW="41"
      NB_LINES="5"
    >
      <ITEMS BASED_ON_SCHEMA="true">
        <ITEM NAME="AS_ATTRIBUTE" FIELD="CHECK" />
      	<ITEM NAME="SCHEMA_COLUMN_NAME" FIELD="CHECK" VALUE="true" />
        <ITEM NAME="LABEL" VALUE="'label'"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="USE_DYNAMIC_GROUPING"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="50"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="GROUP_BY"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="51"
      NB_LINES="3"
      SHOW_IF="USE_DYNAMIC_GROUPING == 'true'"
    >
      <ITEMS>
        <ITEM NAME="COLUMN" FIELD="COLUMN_LIST" />
        <ITEM NAME="ATTRIBUTE_LABEL" VALUE="'name'" />
      </ITEMS>
    </PARAMETER>
     
    <PARAMETER
      NAME="ENCODING"
      FIELD="ENCODING_TYPE"
      NUM_ROW="60"
      REQUIRED="true"
    >
      <DEFAULT>'ISO-8859-15'</DEFAULT>
    </PARAMETER>
     
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="70"
    >
      <DEFAULT/> 
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="STRING" AVAILABILITY="AFTER"/>
  </RETURNS>
</COMPONENT>