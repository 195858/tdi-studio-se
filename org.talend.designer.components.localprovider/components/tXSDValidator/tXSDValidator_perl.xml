<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    SCHEMA_AUTO_PROPAGATE="false"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="THEN_RUN" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="1"
      READONLY="true"
    >
      <TABLE>
        <COLUMN NAME="xsdfile" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="xmlfile" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="moment" TYPE="id_Date" PATTERN='"yyyy-MM-dd HH:mm:ss"'/>
        <COLUMN NAME="job" TYPE="id_String" LENGTH="50"/>
        <COLUMN NAME="component" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="validate" TYPE="id_Integer" LENGTH="1"/>
        <COLUMN NAME="message" TYPE="id_String" LENGTH="255"/>
      </TABLE>
    </PARAMETER>

    <PARAMETER
       NAME="XSDFILE"
       FIELD="FILE"
       REQUIRED="true"
       NUM_ROW="10"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/schema.xsd"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="XMLFILE"
       FIELD="FILE"
       REQUIRED="true"
       NUM_ROW="20"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/file.xml"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="VALID_MESSAGE"
       FIELD="TEXT"
       REQUIRED="true"
       NUM_ROW="30"
    >
      <DEFAULT>"[job " + jobName + "] File is Valid"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="INVALID_MESSAGE"
       FIELD="TEXT"
       REQUIRED="true"
       NUM_ROW="40"
    >
      <DEFAULT>"[job " + jobName + "] File is Invalid"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PRINT"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="50"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="XML-LibXML" MODULE="XML::LibXML" REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="VALID" TYPE="BOOLEAN" AVAILABILITY="FLOW"/>
  </RETURNS>

</COMPONENT>