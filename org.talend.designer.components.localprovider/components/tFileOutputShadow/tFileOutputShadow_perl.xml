<COMPONENT>
   <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA" COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20050320A" STARTABLE="false" VISIBLE="false">
      <SIGNATURE></SIGNATURE>
   </HEADER>
   <DOCUMENTATION>
      <URL/>
   </DOCUMENTATION>
	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
		<CONNECTOR CTYPE="BEFORE" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="AFTER" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="REFERENCE"/>
		<CONNECTOR CTYPE="RUN_OK"/>
		<CONNECTOR CTYPE="RUN_ERROR"/>
		<CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

   <PARAMETERS>

     <PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="1" REQUIRED="true">
       <DEFAULT>'__COMP_DEFAULT_FILE_DIR__/out.xml'</DEFAULT>
     </PARAMETER>

    <PARAMETER
      NAME="ROOT_TAGS"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="2"
      NB_LINES="3"
    >
      <ITEMS>
        <ITEM NAME="TAG" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="ROW_TAG"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="2"
    >
      <DEFAULT>'row'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="COLNAME_AS_TAGNAME"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="3"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELD_TAG"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="3"
      SHOW_IF="COLNAME_AS_TAGNAME == 'false'"
    >
      <DEFAULT>'field'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SPLIT"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="4"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SPLIT_EVERY"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="4"
      SHOW_IF="SPLIT == 'true'"
    >
      <DEFAULT>1000</DEFAULT>
    </PARAMETER>
     
     <PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="5" REQUIRED="true">
       <DEFAULT>'ISO-8859-15'</DEFAULT>
     </PARAMETER>
     
     <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="6">
       <DEFAULT/> 
     </PARAMETER>

   </PARAMETERS>

   <CODEGENERATION/>
   <RETURNS>
      <RETURN NAME="NB_LINE" TYPE="STRING" AVAILABILITY="AFTER"/>
   </RETURNS>
</COMPONENT>