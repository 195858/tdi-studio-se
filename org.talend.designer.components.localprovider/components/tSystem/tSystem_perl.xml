<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <FAMILIES>
    <FAMILY>System</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"    MAX_OUTPUT="0" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" MAX_OUTPUT="0" MAX_INPUT="1" />
    <CONNECTOR CTYPE="RUN_IF" MAX_INPUT="1" />
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="ROOTDIR" FIELD="CHECK" NUM_ROW="10">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DIRECTORY"
      FIELD="DIRECTORY"
      NUM_ROW="10"
      SHOW_IF="ROOTDIR=='true'"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="COMMAND" FIELD="MEMO_PERL" REQUIRED="true" NUM_ROW="20">
      <DEFAULT>'echo HELLO'</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="OUTPUT" FIELD="CLOSED_LIST" NUM_ROW="2">
       <ITEMS DEFAULT="OUTPUT_TO_CONSOLE">
          <ITEM NAME="OUTPUT_TO_CONSOLE" VALUE="OUTPUT_TO_CONSOLE" />
          <ITEM NAME="RETRIEVE_OUTPUT"   VALUE="RETRIEVE_OUTPUT" />
       </ITEMS>
    </PARAMETER>
  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="OUTPUT" TYPE="STRING" AVAILABILITY="AFTER"/>
  </RETURNS>
</COMPONENT>
