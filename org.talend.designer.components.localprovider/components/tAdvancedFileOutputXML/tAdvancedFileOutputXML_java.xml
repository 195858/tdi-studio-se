<COMPONENT>
   <HEADER PLATEFORM="ALL" 
   	 SERIAL="" VERSION="0.102" 
   	 STATUS="ALPHA" COMPATIBILITY="ALL" 
   	 AUTHOR="Talend" RELEASE_DATE="20050320A" 
   	 STARTABLE="false"
   	 EXTENSION="org.talend.designer.fileoutputxml"
   	 >
      <SIGNATURE></SIGNATURE>
   </HEADER>
   <DOCUMENTATION>
      <URL/>
   </DOCUMENTATION>
	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
		<CONNECTOR CTYPE="THEN_RUN" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="REFERENCE"/>
		<CONNECTOR CTYPE="RUN_OK"/>
		<CONNECTOR CTYPE="RUN_ERROR"/>
		<CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

   <PARAMETERS>

     <PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="1" REQUIRED="true">
       <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/out.xml"</DEFAULT>
     </PARAMETER>
     
     <PARAMETER
      NAME="SPLIT"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="2"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SPLIT_EVERY"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="2"
      SHOW_IF="SPLIT == 'true'"
    >
      <DEFAULT>1000</DEFAULT>
    </PARAMETER> 

    <PARAMETER
      NAME="ROOT_TAGS"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="10"
      NB_LINES="3"
      SHOW="false"
    >
      <ITEMS>
        <ITEM NAME="TAG" VALUE="rootTag"/>
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER
      NAME="CREATE"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="10"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="GROUPING"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="20"
      NB_LINES="5"
      SHOW="false"
    >
      <ITEMS>
      	<ITEM NAME="LABEL" FIELD="TEXT"/>
        <ITEM NAME="ATTRIBUTE" FIELD="TEXT"/>
        <ITEM NAME="COLUMN" FIELD="TEXT"/>
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER
      NAME="MAPPING"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="30"
      NB_LINES="5"
      SHOW="false"
    >
      <ITEMS>
      	<ITEM NAME="LABEL" FIELD="TEXT"/>
        <ITEM NAME="ATTRIBUTE" FIELD="TEXT"/>
        <ITEM NAME="DEPTH" FIELD="TEXT" />
        <ITEM NAME="COLUMN" FIELD="TEXT"/>
      </ITEMS>
    </PARAMETER>
    
	<PARAMETER NAME="MAP" FIELD="EXTERNAL" NUM_ROW="40">
         <DEFAULT/>  
    </PARAMETER>
    
    <PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="50" REQUIRED="true">
       <DEFAULT>"ISO-8859-15"</DEFAULT>
     </PARAMETER>
     
     <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="50">
       <DEFAULT/> 
     </PARAMETER>     
    
   </PARAMETERS>

   <CODEGENERATION/>
   
   <RETURNS>
   		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
   </RETURNS>
</COMPONENT>