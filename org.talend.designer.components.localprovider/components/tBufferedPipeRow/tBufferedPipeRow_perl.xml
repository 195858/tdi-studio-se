<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    SCHEMA_AUTO_PROPAGATE="false"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Processing</FAMILY>
    <FAMILY>System</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="10"
      READONLY="true"
    >
      <TABLE>
        <COLUMN NAME="outputline" TYPE="string" LENGTH="255"/>
      </TABLE>
    </PARAMETER>

    <PARAMETER
      NAME="COMMAND"
      FIELD="TEXT"
      NUM_ROW="20"
    >
      <DEFAULT>'perl -ne "print if (rand 100 > 50)"'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DELIMITER"
      FIELD="TEXT"
      NUM_ROW="30"
    >
      <DEFAULT>','</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <ADVANCED_PARAMETERS>

    <PARAMETER
      NAME="TEMP_FILEPATH"
      FIELD="FILE"
      NUM_ROW="10"
    >
      <DEFAULT>File:Spec->tmpdir.'/'.$_globals{job_name}.'-'.$_globals{pid}</DEFAULT>
    </PARAMETER>

  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="BPROUT" OUTPUT="FIB">

      <TEMPLATE NAME="BPROUT" COMPONENT="tBufferedPipeRowOut">
        <LINK_TO NAME="FIB" CTYPE="ROWS_END"/>
      </TEMPLATE>
      
      <TEMPLATE NAME="FIB" COMPONENT="tFileInputFullRow"/>
      
      <TEMPLATE_PARAM SOURCE="self.COMMAND" TARGET="BPROUT.COMMAND"/>
      <TEMPLATE_PARAM SOURCE="self.DELIMITER" TARGET="BPROUT.DELIMITER"/>
      <TEMPLATE_PARAM SOURCE="self.TEMP_FILEPATH" TARGET="BRPOUT.TEMP_FILEPATH"/>


      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="FIB.SCHEMA"/>
      <TEMPLATE_PARAM SOURCE="self.TEMP_FILEPATH" TARGET="FIB.FILENAME"/>
    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS/>
</COMPONENT>
