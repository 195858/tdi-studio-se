<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20090820A"
    STARTABLE="false"
    SCHEMA_AUTO_PROPAGATE="false"
    DATA_AUTO_PROPAGATE="false" 
  ><!---->
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Data Quality</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MIN_INPUT="1" MAX_INPUT="1" MIN_OUTPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    
	    <PARAMETER
	      NAME="SCHEMA"
	      FIELD="SCHEMA_TYPE"
	      REQUIRED="true"
	      NUM_ROW="10"
	    >
	      <DEFAULT/>
	    </PARAMETER>
			
	    <PARAMETER
	      NAME="OUTFIELD"
	      FIELD="COLUMN_LIST"
	      REQUIRED="true"
	      NUM_ROW="20"
	    >
	    </PARAMETER>
	    
	    <PARAMETER NAME="SUFFIXSEPARATOR" FIELD="TEXT" NUM_ROW="30"
			REQUIRED="true">
			<DEFAULT>":"</DEFAULT>
	    </PARAMETER>

		<PARAMETER NAME="FIELDSEPARATOR" FIELD="TEXT" NUM_ROW="40"
			REQUIRED="true">
			<DEFAULT>"\n"</DEFAULT>
		</PARAMETER>
			    	    
		<PARAMETER NAME="ROWSEPARATOR" FIELD="TEXT" NUM_ROW="40"
			REQUIRED="true">
			<DEFAULT>"\n\n"</DEFAULT>
		</PARAMETER>

  </PARAMETERS>
  
  	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="ADVANCED_SEPARATOR" FIELD="CHECK" REQUIRED="true" NUM_ROW="10" >
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="THOUSANDS_SEPARATOR" FIELD="TEXT" REQUIRED="true" NUM_ROW="11"
			SHOW_IF="(ADVANCED_SEPARATOR == 'true')">
			<DEFAULT>","</DEFAULT>
		</PARAMETER>		
		
		<PARAMETER NAME="DECIMAL_SEPARATOR" FIELD="TEXT" REQUIRED="true" NUM_ROW="11"
			SHOW_IF="(ADVANCED_SEPARATOR == 'true')">
			<DEFAULT>"."</DEFAULT>
		</PARAMETER>
  	</ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="THRESHOLDVAOUT" OUTPUT="THRESHOLDVAIN">

      <TEMPLATE NAME="THRESHOLDVAOUT" COMPONENT="tThresholdViolationAlertOut">
        <LINK_TO NAME="THRESHOLDVAIN" CTYPE="ROWS_END"/>
      </TEMPLATE>
      
      <TEMPLATE NAME="THRESHOLDVAIN" COMPONENT="tThresholdViolationAlertIn"/>
      
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="THRESHOLDVAOUT.DESTINATION"/>
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="THRESHOLDVAIN.ORIGIN" />
      
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="THRESHOLDVAOUT.SCHEMA"/>
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="THRESHOLDVAIN.SCHEMA"/>
      
      <TEMPLATE_PARAM SOURCE="self.SUFFIXSEPARATOR" TARGET="THRESHOLDVAOUT.SUFFIXSEPARATOR"/>
      <TEMPLATE_PARAM SOURCE="self.FIELDSEPARATOR" TARGET="THRESHOLDVAOUT.FIELDSEPARATOR" />
      <TEMPLATE_PARAM SOURCE="self.ROWSEPARATOR" TARGET="THRESHOLDVAOUT.ROWSEPARATOR"/>
      <TEMPLATE_PARAM SOURCE="self.ADVANCED_SEPARATOR" TARGET="THRESHOLDVAOUT.ADVANCED_SEPARATOR"/>
      <TEMPLATE_PARAM SOURCE="self.THOUSANDS_SEPARATOR" TARGET="THRESHOLDVAOUT.THOUSANDS_SEPARATOR" />
      <TEMPLATE_PARAM SOURCE="self.DECIMAL_SEPARATOR" TARGET="THRESHOLDVAOUT.DECIMAL_SEPARATOR"/>
      
      <TEMPLATE_PARAM SOURCE="self.OUTFIELD" TARGET="THRESHOLDVAIN.OUTFIELD" />
    </TEMPLATES>
  </CODEGENERATION>

  <RETURNS>
  	<RETURN NAME="MAILFIELD" TYPE="id_String" AVAILABILITY="AFTER" />
  </RETURNS>

</COMPONENT>