<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>
    <!--<CONNECTOR CTYPE="RUN_OK"/>-->
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER 
      NAME="WAIT" 
      FIELD="TEXT" 
      NUM_ROW="1"
      REQUIRED="true"
    >
      <DEFAULT>1</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="MAX_ITERATIONS" FIELD="TEXT" NUM_ROW="2">
      <DEFAULT></DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USE_EXISTING_CONNECTION"
      READONLY="true"
      FIELD="CHECK"
      NUM_ROW="3"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>


    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      FILTER="REGEXP:^(.)*(Connection)(.)*$"
      NUM_ROW="3"
      REQUIRED="true"
    />

    <PARAMETER 
      NAME="TABLE" 
      FIELD="TEXT" 
      NUM_ROW="4"
      REQUIRED="true"
    >
      <DEFAULT>'mytable'</DEFAULT>
    </PARAMETER>



    <PARAMETER
      NAME="OPERATOR"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="5"
    >
      <ITEMS DEFAULT="&gt;">
        <ITEM NAME="EQ"    VALUE="==" />
        <ITEM NAME="NEQ"   VALUE="!=" />
        <ITEM NAME="GT"    VALUE="&gt;"/>
        <ITEM NAME="LT"    VALUE="&lt;"/>
        <ITEM NAME="GE"    VALUE="&gt;="/>
        <ITEM NAME="LE"    VALUE="&lt;="/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER 
      NAME="VALUE" 
      FIELD="TEXT" 
      REQUIRED="true"
      NUM_ROW="5"
    >
      <DEFAULT>0</DEFAULT>
    </PARAMETER>


    <PARAMETER
      NAME="THEN"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="6"
    >
      <ITEMS DEFAULT="continue">
        <ITEM NAME="CONTINUE" VALUE="continue" />
        <ITEM NAME="EXIT_LOOP" VALUE="exitloop" />
      </ITEMS>
    </PARAMETER>



  </PARAMETERS>



  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="CURRENT_ITERATION" TYPE="INT" AVAILABILITY="FLOW"/>
    <RETURN NAME="ROW_COUNT" TYPE="INT" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
