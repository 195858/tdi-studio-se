<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="THEN_RUN" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="RUN_ERROR" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="RUN_IF" MAX_OUTPUT="1"/>
  </CONNECTORS>

  <PARAMETERS>
  
    <PARAMETER
    	NAME="ACTION"
    	FIELD="CLOSED_LIST"
    	SHOW="true"
    	NUM_ROW="1"
    >
    	<ITEMS DEFAULT="INSERT" >
    		<ITEM NAME="INSERT" VALUE="INSERT" />
    		<ITEM NAME="EXPORT" VALUE="EXPORT" />    		
    	</ITEMS>
    </PARAMETER>
    
    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="DATABASE"
    />  
    
    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="SERVER_NAME"
      SHOW_IF="ACTION=='INSERT'"          
    >
      <DEFAULT>"localhost"</DEFAULT>
    </PARAMETER>      

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="PORT"
      SHOW_IF="ACTION=='INSERT'"
    >
      <DEFAULT>"1433"</DEFAULT>
    </PARAMETER>
  
        
   	<PARAMETER
      NAME="BCP_UTILITY"
      FIELD="FILE"
      NUM_ROW="2"
      SHOW_IF="ACTION=='EXPORT'"      
    >
      <DEFAULT>"bcp"</DEFAULT>
    </PARAMETER>
    
    
    <PARAMETER
      NAME="SERVER"
      FIELD="TEXT"
      NUM_ROW="3"
      SHOW_IF="ACTION=='EXPORT'"          
    >
      <DEFAULT>"DB SERVER"</DEFAULT>
    </PARAMETER>    
    
    <PARAMETER
      NAME="DBNAME"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="SID"
      SHOW_IF="ACTION=='INSERT'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="USERNAME"      
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="PASSWORD"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE"
      FIELD="TEXT"
      NUM_ROW="6"
      REQUIRED="true"
      SHOW_IF="ACTION=='INSERT'"
    >
      <DEFAULT>"employee"</DEFAULT>
    </PARAMETER>
    
   <PARAMETER
    	NAME="QUERY"
    	FIELD="MEMO_SQL"
    	NUM_ROW="7"
    	SHOW_IF="ACTION=='EXPORT'"
    	REQUIRED="true"
    >
    	<DEFAULT>"SELECT * FROM TABLE"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="REMOTE_FILENAME"
      FIELD="FILE"
      NUM_ROW="8"
      REQUIRED="true"
      SHOW_IF="ACTION=='INSERT'"
    >
      <DEFAULT>"C:/mssql_bulk.txt"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELDS_TERMINATED_BY"
      FIELD="TEXT"
      NUM_ROW="9"
      REQUIRED="true"
    >
      <DEFAULT>";"</DEFAULT>
    </PARAMETER>
    
   <PARAMETER
      NAME="ROW_TERMINATED_BY"
      FIELD="TEXT"
      NUM_ROW="9"
      REQUIRED="true"
      SHOW_IF ="ACTION=='INSERT'"
    >
      <DEFAULT>"\n"</DEFAULT>      
    </PARAMETER>
    
   <PARAMETER
      NAME="ROW_TERMINATED_EXPORT"
      FIELD="TEXT"
      NUM_ROW="9"
      REQUIRED="true"
      SHOW_IF ="ACTION=='EXPORT'"
    >
      <DEFAULT>"\\n"</DEFAULT>      
    </PARAMETER>

   <PARAMETER
      NAME="FIRST_ROW"
      FIELD="TEXT"
      NUM_ROW="9"
      REQUIRED="true"
      SHOW_IF="ACTION=='INSERT'"
    >
      <DEFAULT>"1"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="DATA_FILE_TYPE"
      FIELD="CLOSED_LIST"
      NUM_ROW="10"
      REQUIRED="true"
    >
      <ITEMS DEFAULT ="char" >
        <ITEM NAME="char"       VALUE="char" />
        <ITEM NAME="native"     VALUE="native"/>
        <ITEM NAME="widechar"  	VALUE="widechar"/>
        <ITEM NAME="widenative" VALUE="widenative" SHOW_IF="ACTION=='INSERT'"/>        
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER 
    	NAME="OUTPUT_FILE_NAME"
    	FIELD="FILE"
    	NUM_ROW="10"
    	REQUIRED="true"
    	SHOW_IF="ACTION=='EXPORT'"
    >
    	<DEFAULT>"C:/mssql_bulk.txt"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
    	NAME="OUTPUT"
    	FIELD="CLOSED_LIST"
    	NUM_ROW="11"
    	REQUIRED = "true"
    	SHOW_IF="ACTION=='EXPORT'"
    >
    	<ITEMS DEFAULT="CONSOLE" >
    		<ITEM NAME="CONSOLE" VALUE="OUTPUT_TO_CONSOLE" />
    		<ITEM NAME="VARIABLE" VALUE="RETRIEVE_OUTPUT" />
    	</ITEMS>
    </PARAMETER>

   </PARAMETERS>

   <CODEGENERATION>
    <IMPORTS>
		<IMPORT NAME="Driver-jTDS" MODULE="jtds-1.2.jar" REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>

   <RETURNS />
</COMPONENT>
