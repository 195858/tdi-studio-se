    <PARAMETER
      NAME="COMMAND"
      FIELD="TEXT"
      NUM_ROW="20"
    >
      <DEFAULT>'perl -pe "$|++; s{,}{~}g"'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DELIMITER"
      FIELD="TEXT"
      NUM_ROW="30"
    >
      <DEFAULT>','</DEFAULT>
