<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
       SERIAL=""
      VERSION="0.101"
       STATUS="ALPHA"
         
COMPATIBILITY="ALL"
       AUTHOR="Talend"
 RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="TO" FIELD="TEXT" REQUIRED="true" NUM_ROW="10">
      <DEFAULT>"receiver@example.com"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="FROM" FIELD="TEXT" REQUIRED="true" NUM_ROW="20">
      <DEFAULT>"send@example.com"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CC" FIELD="TEXT" REQUIRED="false" NUM_ROW="30">
      <DEFAULT>"carbon@example.com"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="BCC" FIELD="TEXT" REQUIRED="false" NUM_ROW="40">
      <DEFAULT>"blindcarbon@example.com"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="SUBJECT" FIELD="TEXT" REQUIRED="true" NUM_ROW="50">
      <DEFAULT>"Talend Open Studio notification"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="MESSAGE" FIELD="MEMO" REQUIRED="false" NUM_ROW="60">
      <DEFAULT>"Hello"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="CHECK_ATTACHMENT" FIELD="CHECK" REQUIRED="true" NUM_ROW="65">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>    

    <PARAMETER NAME="ATTACHMENTS" FIELD="TABLE" REQUIRED="false" NUM_ROW="70" NB_LINES="3">
      <ITEMS>
        <ITEM NAME="FILE" FIELD="FILE"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="HEADERS"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="80"
      NB_LINES="3"
    >
      <ITEMS>
        <ITEM NAME="KEY" />
        <ITEM NAME="VALUE" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER NAME="SMTP_HOST" FIELD="TEXT" REQUIRED="true" NUM_ROW="90">
      <DEFAULT>"smtp.provider.com"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="SMTP_PORT" FIELD="TEXT" REQUIRED="true" NUM_ROW="90">
      <DEFAULT>25</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SSL"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="95"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="STARTTLS"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="95"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="NEED_AUTH"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="100"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="AUTH_USERNAME"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="110"
      SHOW_IF="NEED_AUTH == 'true'"
    >
      <DEFAULT>"username"</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="AUTH_PASSWORD"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="110"
      SHOW_IF="NEED_AUTH == 'true'"
    >
      <DEFAULT>"password"</DEFAULT>
    </PARAMETER>
	
  </PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="JavaMail" MODULE="mail.jar" REQUIRED="true" />
      <IMPORT NAME="JAF" MODULE="activation.jar" REQUIRED="true" />
  </IMPORTS>
  </CODEGENERATION>

  <RETURNS/>

</COMPONENT>