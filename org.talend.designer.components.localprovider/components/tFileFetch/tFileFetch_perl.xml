<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
       SERIAL=""
      VERSION="0.101"
       STATUS="ALPHA"
COMPATIBILITY="ALL"
       AUTHOR="Talend"
 RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <!--<CONNECTOR CTYPE="RUN_OK"/>-->
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
       NAME="URI"
       FIELD="TEXT"
       REQUIRED="true"
       NUM_ROW="10"
    >
      <DEFAULT>'http://talendforge.org/file_fetch.txt'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DIRECTORY"
      FIELD="DIRECTORY"
      NUM_ROW="20"
      REQUIRED="true"
    >
      <DEFAULT>'__COMP_DEFAULT_FILE_DIR__'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FILENAME"
      FIELD="TEXT"
      REQUIRED="false"
      NUM_ROW="30"
    >
      <DEFAULT></DEFAULT>
    </PARAMETER>
  </PARAMETERS>

  <CODEGENERATION>
     <IMPORTS>
       <IMPORT NAME="LWP-Simple" MODULE="LWP::Simple" REQUIRED="true" />
     </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="CURRENT_FILEPATH" TYPE="STRING" AVAILABILITY="AFTER"/>
  </RETURNS>

</COMPONENT>